<div class="background-top-teacher">
  <div class="container-teacher">
    <div class="avatar-photo text-center teacher-avatar">

    </div>

    <% if @user.avatar.present? %>
     <%=  cl_image_tag @user.avatar , transformation: [
  # {effect: "cartoonify"},
  {radius: "max"},
  {effect: "outline:30", color: "lightblue"},
  # {background: "lightblue"},
  {height: 300, crop: "scale"}
  ] %>

    <% else %>
    <img class="avatar-very-large alt="avatar-very-large" src= <%= "https://res.cloudinary.com/dt6csu5lm/image/upload/v1600363054/zwckk5cbghb26s3hnamh.jpg" %> />
    <% end %>


    <div class="text-center-teacher">
      <h1><%= @user.first_name %> <%= @user.last_name %> </h1>
      <% if @user.coach %>
            <h2><strong>COACH </strong></h2>
          <% end %>
      <p class="email-teacher"><%= @user.email %></p>
        </div>
        <div class="button-profile-position">
          <% if @user == current_user %>
            <%= link_to "Edit profile", edit_user_path(@user),class:"btn btn-flat", style:"background-color: blue;" %>
          <% end %>
        </div>

<div class="right-part-top">
          <div class="next-class">
              <% is_none = true %>
              <p style="color:black"><strong>StreetFiter depuis </strong>
                </p><%= @user.created_at %>

              </div>
            </div>
          </div>


          </div>
</div>

<div class="calendar-heading">
            <div class="methodologie-card">

<div class="carousel-item">
              <div class="chart-container emo-chart" style="position: relative;">
                <span style="position: absolute; left: 28px; top: 211px;"><%= Emotion.all.first.rating %></span>
                <span style="position: absolute; left: 28px; top: 168px;"><%= Emotion.all.second.rating %></span>
                <span style="position: absolute; left: 28px; top: 127px;"><%= Emotion.all.third.rating %></span>
                <span style="position: absolute; left: 28px; top: 83px;"><%= Emotion.all.fourth.rating %></span>
                <span style="position: absolute; left: 28px; top: 40px;"><%= Emotion.all.fifth.rating %></span>
                <%= line_chart @dailynumber, label: "Emotion", xtitle: "Date", ytitle: "Emotions", points: true, xmin: "2019-12-02", xmax: "2019-12-06", min: 0, max: 5, id: 'chartkick', curve: true, discrete: false, colors: ['#F7D167'] %>
              </div>
            </div>
          </div>

<!-- line_chart DailyEmotion.group_by_day(Event.find(DailyEmotion.find_by(user_id:@user.id).event_id).event_date) -->


              </div>
            </div>
  </div>

<!-- Column User attribut  -->
        <div class="info-teacher">
          <div class="first-column-teacher">
            <div class="background-matiere">
                <div class="disposition-tag">
                  <h5><strong>Téléphone: </strong> <%= @user.phone %></h5>
                </div>
                <div class="disposition-tag">
                  <h5><strong>Email:   </strong> <%= @user.email %></h5>
                </div>
                <div class="disposition-tag">
                  <h5><strong>Job: </strong> <%= @user.job %></h5>
                </div>
                <div class="disposition-tag">
                  <h5><strong>Company: </strong> <%= @user.company %></h5>
                </div>
            </div>
            <div class="background-review">
              <h5><strong>Abonnement</strong></h5>
                  <% if !@user.coach %>

                    <div class="background-matiere">
                        <% if @user.formula %>

                        <div class="disposition-tag">
                          <h6><strong>Formule: </strong> <%= @user.formula.offer %></h6>
                        </div>
                        <div class="disposition-tag">
                          <h6><strong>Début: </strong> <%= @user.formula.start_at %></h6>
                        </div>
                        <div class="disposition-tag">
                          <h6><strong>Séances restantes dans le mois: </strong> <%= @user.training_number %></h6>
                        </div>
                        <div class="disposition-tag">
                          <h6><strong>Fin: </strong> <%= @user.formula.end_at %></h6>
                        </div>
                    <% else %>
                <div class="disposition-tag">
                  <h5><strong>Pas encore d'abonnement </strong> </h5>
                </div>
                    <% end %>

                    </div>
                    <% else %>
                    <div class="disposition-tag">
                      <h5><strong>Nombre d'abonnés ce mois: </strong> <%=User.where("training_number > ?", 0).count %></h5>
                    </div>
                    <% end %>

                    </div>
          </div>





          <div class="second-column-teacher">
            <div class="methodologie-card">
                  <h3>Le mois de <%= @user.first_name %>:</h3>


                <div id="events_calendar">
                  <%= render partial: "calendar", locals: {events: @events} %>
                </div>
            </div>

            <div class="parcours-card">
              <h5><strong>Description</strong></h5>
              <ul>



                <li><%= @user.description %></li>

                <li>orem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries,</li>

              </ul>
            </div>

          </div>
        </div>
        </div>










